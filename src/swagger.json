{
  "openapi": "3.0.0",
  "info": {
    "title": "API para cadastro de usu√°rios",
    "version": "1.0.0"
  },
  "paths": {
    "/": {
      "post": {
        "tags": ["users"],
        "summary": "list all users ",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "user created"
          },
          "404": {
            "description": "user not created"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["users"],
        "summary": "list all users",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "required": true,
            "description": "user id is uuid format"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "created_at": {
                      "type": "string",
                      "format": "date"
                    },
                    "updated_at": {
                      "type": "string",
                      "format": "date"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "return array of users"
          },
          "404": {
            "description": "user not permission or not exist"
          }
        }
      }
    },
    "/users/:user_id": {
      "get": {
        "tags": ["users"],
        "summary": "view user profile",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "description": "user id is uuid format"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "created_at": {
                      "type": "string",
                      "format": "date"
                    },
                    "updated_at": {
                      "type": "string",
                      "format": "date"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "object user profile "
          },
          "404": {
            "description": "user not exist"
          }
        }
      }
    },
    "/users/:user_id/admin": {
      "patch": {
        "tags": ["users"],
        "summary": "view user profile",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "description": "user id is uuid format"
          }
        ],
        "responses": {
          "200": {
            "description": "user is updated to admin"
          },
          "404": {
            "description": "user not exist"
          }
        }
      }
    }
  },

  "consumes": ["application/json"]
}
